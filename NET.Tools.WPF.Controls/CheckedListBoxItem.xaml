<ListBoxItem x:Class="NET.Tools.WPF.CheckedListBoxItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008">
    <StackPanel Orientation="Horizontal">
        <CheckBox Name="ckbChecked" VerticalAlignment="Center" VerticalContentAlignment="Center" Checked="ckbChecked_Checked" Unchecked="ckbChecked_Checked" />
        <Label Name="lblName" VerticalAlignment="Center" VerticalContentAlignment="Center" MouseLeftButtonDown="lblName_MouseLeftButtonDown" />
    </StackPanel>
</ListBoxItem>