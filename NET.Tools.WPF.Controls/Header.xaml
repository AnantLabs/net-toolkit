<UserControl x:Class="NET.Tools.WPF.Header"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" x:Name="self"
    MinHeight="75" MaxHeight="150" Width="Auto" mc:Ignorable="d" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:WPF="clr-namespace:NET.Tools.WPF" d:DesignHeight="70" d:DesignWidth="322">
    <Grid Name="grdMain">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition MaxWidth="32" x:Name="colImage"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Label Grid.Row="0" Grid.Column="1" Name="lblHeader" FontSize="23" FontWeight="Bold">Header</Label>
        <TextBlock Grid.Row="1" Grid.Column="1" Name="lblDescription" TextWrapping="Wrap" Margin="5">Description</TextBlock>
        <Image Grid.Row="0" Grid.RowSpan="1" Grid.Column="0" Name="imgIcon" Stretch="Uniform" HorizontalAlignment="Left" VerticalAlignment="Center" Source="Resources/Default.ico" />
    </Grid>
</UserControl>
