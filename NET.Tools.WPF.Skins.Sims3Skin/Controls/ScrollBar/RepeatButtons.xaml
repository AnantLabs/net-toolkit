    <PathGeometry x:Key="Arrow_Up">
        <PathFigure IsClosed="True" IsFilled="True" StartPoint="45,0">
            <LineSegment Point="55,0" />
            <LineSegment Point="100,90" />
            <LineSegment Point="100,100" />
            <LineSegment Point="0,100" />
            <LineSegment Point="0,90" />
            <LineSegment Point="45,0" />
        </PathFigure>
    </PathGeometry>

