            <LineSegment Point="0,0" />
            <LineSegment Point="10,0" />
            <LineSegment Point="100,45" />
        </PathFigure>
    </PathGeometry>

    <DrawingBrush x:Key="ScbRBDraw_Up">
        <DrawingBrush.Drawing>
            <DrawingGroup>
                <GeometryDrawing Brush="#7AA0E6" Geometry="{StaticResource Arrow_Up}">
                    <GeometryDrawing.Pen>
                        <Pen Thickness="7" Brush="#203D80" StartLineCap="Round" EndLineCap="Round" LineJoin="Round" />
                    </GeometryDrawing.Pen>
                </GeometryDrawing>
                <GeometryDrawing>
                    <GeometryDrawing.Pen>
                        <Pen Thickness="15" StartLineCap="Round" EndLineCap="Round" LineJoin="Round">
                            <Pen.Brush>
                                <LinearGradientBrush StartPoint="0,1" EndPoint="1,0">
                                    <GradientStop Offset="0" Color="#20FFFFFF" />
                                    <GradientStop Offset="1" Color="#50FFFFFF" />
                                </LinearGradientBrush>
                            </Pen.Brush>
                        </Pen>
                    </GeometryDrawing.Pen>
                    <GeometryDrawing.Geometry>
                        <LineGeometry StartPoint="11,85" EndPoint="57,5" />
                    </GeometryDrawing.Geometry>
                </GeometryDrawing>
            </DrawingGroup>
        </DrawingBrush.Drawing>
    </DrawingBrush>

