<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style TargetType="{x:Type Border}" x:Key="Sims3ExtendedBorder">
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="#486FA8"/>
        <Setter Property="CornerRadius" Value="5"/>
        <Setter Property="Background">
            <Setter.Value>
                <RadialGradientBrush RadiusX="0.5" RadiusY="0.5" GradientOrigin="0.5,0.5"
                                                 Center="0.5,0.5">
                    <GradientStop Offset="0" Color="#C9F6FF" />
                    <GradientStop Offset="1" Color="#A3CBED" />
                </RadialGradientBrush>
            </Setter.Value>
        </Setter>
    </Style>
    
</ResourceDictionary>