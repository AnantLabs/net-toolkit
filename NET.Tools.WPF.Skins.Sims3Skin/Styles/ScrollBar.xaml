<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:eff="clr-namespace:NET.Tools.WPF;assembly=NET.Tools.WPF.Effects">
    
    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1" x:Key="VerticalBrush">
        <GradientStop Offset="0" Color="#9ABFFF"/>
        <GradientStop Offset="1" Color="#5A89D9"/>
    </LinearGradientBrush>
    
    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0" x:Key="HorizontalBrush">
        <GradientStop Offset="0" Color="#9ABFFF"/>
        <GradientStop Offset="1" Color="#5A89D9"/>
    </LinearGradientBrush>
    
    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0" x:Key="HorizontalBack">
        <GradientStop Offset="0" Color="#A7BECD"/>
        <GradientStop Offset=".6" Color="#D2EBF7"/>
        <GradientStop Offset="1" Color="#9DB7D3"/>
    </LinearGradientBrush>
    
    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1" x:Key="VerticalBack">
        <GradientStop Offset="0" Color="#A7BECD"/>
        <GradientStop Offset=".6" Color="#D2EBF7"/>
        <GradientStop Offset="1" Color="#9DB7D3"/>
    </LinearGradientBrush>
    
    <!--*************************************************************************-->

    <Style x:Key="ButtonUp" TargetType="{x:Type RepeatButton}">
        <Setter Property="SnapsToDevicePixels" Value="True"/>
        <Setter Property="OverridesDefaultStyle" Value="true"/>
        <Setter Property="Focusable" Value="false"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type RepeatButton}">
                    <Border BorderThickness="0" Margin="1,0,1,2">
                        <Border.Background>
                            <DrawingBrush>
                                <DrawingBrush.Drawing>
                                    <GeometryDrawing>
                                        <GeometryDrawing.Brush>
                                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                                <GradientStop Offset="0" Color="#9ABFFF" x:Name="DarkCorner"/>
                                                <GradientStop Offset="1" Color="#5A89D9" x:Name="BrightCorner"/>
                                            </LinearGradientBrush>
                                        </GeometryDrawing.Brush>
                                        <GeometryDrawing.Pen>
                                            <Pen Brush="#1F3C80" Thickness="10" StartLineCap="Round" EndLineCap="Round" />
                                        </GeometryDrawing.Pen>
                                        <GeometryDrawing.Geometry>
                                            <PathGeometry>
                                                <PathFigure StartPoint="50,0" IsClosed="True" IsFilled="True">
                                                    <LineSegment Point="0,100"/>
                                                    <LineSegment Point="100,100"/>
                                                </PathFigure>
                                            </PathGeometry>
                                        </GeometryDrawing.Geometry>
                                    </GeometryDrawing>
                                </DrawingBrush.Drawing>
                            </DrawingBrush>
                        </Border.Background>
                    </Border>
                    <ControlTemplate.Triggers>
                        <EventTrigger RoutedEvent="RepeatButton.MouseEnter">
                            <BeginStoryboard>
                                <Storyboard>
                                    <ColorAnimation
                                        Storyboard.TargetName="DarkCorner"
                                        Storyboard.TargetProperty="Color"
                                        To="#D0FFFF" AutoReverse="False"/>
                                    <ColorAnimation
                                        Storyboard.TargetName="BrightCorner"
                                        Storyboard.TargetProperty="Color"
                                        To="#D0FFFF" AutoReverse="False"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                        <EventTrigger RoutedEvent="RepeatButton.MouseLeave">
                            <BeginStoryboard>
                                <Storyboard>
                                    <ColorAnimation
                                        Storyboard.TargetName="DarkCorner"
                                        Storyboard.TargetProperty="Color"
                                        To="#9ABFFF" AutoReverse="False"/>
                                    <ColorAnimation
                                        Storyboard.TargetName="BrightCorner"
                                        Storyboard.TargetProperty="Color"
                                        To="#5A89D9" AutoReverse="False"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
    <Style x:Key="ButtonDown" TargetType="{x:Type RepeatButton}">
        <Setter Property="SnapsToDevicePixels" Value="True"/>
        <Setter Property="OverridesDefaultStyle" Value="true"/>
        <Setter Property="Focusable" Value="false"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type RepeatButton}">
                    <Border BorderThickness="0" Margin="1,2,1,0">
                        <Border.Background>
                            <DrawingBrush>
                                <DrawingBrush.Drawing>
                                    <GeometryDrawing>
                                        <GeometryDrawing.Brush>
                                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                                <GradientStop Offset="0" Color="#9ABFFF" x:Name="DarkCorner"/>
                                                <GradientStop Offset="1" Color="#5A89D9" x:Name="BrightCorner"/>
                                            </LinearGradientBrush>
                                        </GeometryDrawing.Brush>
                                        <GeometryDrawing.Pen>
                                            <Pen Brush="#1F3C80" Thickness="10" StartLineCap="Round" EndLineCap="Round" />
                                        </GeometryDrawing.Pen>
                                        <GeometryDrawing.Geometry>
                                            <PathGeometry>
                                                <PathFigure StartPoint="50,100" IsClosed="True" IsFilled="True">
                                                    <LineSegment Point="0,0"/>
                                                    <LineSegment Point="100,0"/>
                                                </PathFigure>
                                            </PathGeometry>
                                        </GeometryDrawing.Geometry>
                                    </GeometryDrawing>
                                </DrawingBrush.Drawing>
                            </DrawingBrush>
                        </Border.Background>
                    </Border>
                    <ControlTemplate.Triggers>
                        <EventTrigger RoutedEvent="RepeatButton.MouseEnter">
                            <BeginStoryboard>
                                <Storyboard>
                                    <ColorAnimation
                                        Storyboard.TargetName="DarkCorner"
                                        Storyboard.TargetProperty="Color"
                                        To="#D0FFFF" AutoReverse="False"/>
                                    <ColorAnimation
                                        Storyboard.TargetName="BrightCorner"
                                        Storyboard.TargetProperty="Color"
                                        To="#D0FFFF" AutoReverse="False"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                        <EventTrigger RoutedEvent="RepeatButton.MouseLeave">
                            <BeginStoryboard>
                                <Storyboard>
                                    <ColorAnimation
                                        Storyboard.TargetName="DarkCorner"
                                        Storyboard.TargetProperty="Color"
                                        To="#9ABFFF" AutoReverse="False"/>
                                    <ColorAnimation
                                        Storyboard.TargetName="BrightCorner"
                                        Storyboard.TargetProperty="Color"
                                        To="#5A89D9" AutoReverse="False"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
