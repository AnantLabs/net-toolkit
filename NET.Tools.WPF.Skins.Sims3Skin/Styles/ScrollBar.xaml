    <Style x:Key="ButtonRight" TargetType="{x:Type RepeatButton}">
        <Setter Property="SnapsToDevicePixels" Value="True"/>
        <Setter Property="OverridesDefaultStyle" Value="true"/>
        <Setter Property="Focusable" Value="false"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type RepeatButton}">
                    <Border BorderThickness="0" Margin="2,1,0,1">
                        <Border.Background>
                            <DrawingBrush>
                                <DrawingBrush.Drawing>
                                    <GeometryDrawing>
                                        <GeometryDrawing.Brush>
                                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                                <GradientStop Offset="0" Color="#9ABFFF" x:Name="DarkCorner"/>
                                                <GradientStop Offset="1" Color="#5A89D9" x:Name="BrightCorner"/>
                                            </LinearGradientBrush>
                                        </GeometryDrawing.Brush>
                                        <GeometryDrawing.Pen>
                                            <Pen Brush="#1F3C80" Thickness="10" StartLineCap="Round" EndLineCap="Round" />
                                        </GeometryDrawing.Pen>
                                        <GeometryDrawing.Geometry>
                                            <PathGeometry>
                                                <PathFigure StartPoint="100,50" IsClosed="True" IsFilled="True">
                                                    <LineSegment Point="0,0"/>
                                                    <LineSegment Point="0,100"/>
                                                </PathFigure>
                                            </PathGeometry>
                                        </GeometryDrawing.Geometry>
                                    </GeometryDrawing>
                                </DrawingBrush.Drawing>
                            </DrawingBrush>
                        </Border.Background>
                    </Border>
                    <ControlTemplate.Triggers>
                        <EventTrigger RoutedEvent="RepeatButton.MouseEnter">
                            <BeginStoryboard>
                                <Storyboard>
                                    <ColorAnimation
                                        Storyboard.TargetName="DarkCorner"
                                        Storyboard.TargetProperty="Color"
                                        To="#D0FFFF" AutoReverse="False"/>
                                    <ColorAnimation
                                        Storyboard.TargetName="BrightCorner"
                                        Storyboard.TargetProperty="Color"
                                        To="#D0FFFF" AutoReverse="False"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                        <EventTrigger RoutedEvent="RepeatButton.MouseLeave">
                            <BeginStoryboard>
                                <Storyboard>
                                    <ColorAnimation
                                        Storyboard.TargetName="DarkCorner"
                                        Storyboard.TargetProperty="Color"
                                        To="#9ABFFF" AutoReverse="False"/>
                                    <ColorAnimation
                                        Storyboard.TargetName="BrightCorner"
                                        Storyboard.TargetProperty="Color"
                                        To="#5A89D9" AutoReverse="False"/>
                                </Storyboard>
