<Window x:Class="NET.Tools.Demo.DialogWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dialogs" Height="300" Width="300" WindowStartupLocation="CenterScreen">
    <Grid>
        <Button Content="Error-Dialog" Height="23" Margin="12,12,12,0" Name="button1" VerticalAlignment="Top" Click="button1_Click" />
        <Button Height="23" Margin="12,41,12,0" Name="button2" VerticalAlignment="Top" Click="button2_Click">Message-Dialog</Button>
        <Button Height="23" Margin="12,70,12,0" Name="button3" VerticalAlignment="Top" Click="button3_Click">Progress-Dialog</Button>
        <Button Height="23" Margin="12,99,12,0" Name="button4" VerticalAlignment="Top" Click="button4_Click">Login-Dialog</Button>
        <Button Margin="12,128,12,0" Name="button5" Click="button5_Click" Height="23" VerticalAlignment="Top">Input-Dialog</Button>
        <ListBox Height="47" Margin="12,0,12,12" Name="lstSkins" VerticalAlignment="Bottom" SelectedIndex="0" SelectionChanged="lstSkins_SelectionChanged">
            <ListBoxItem>Default</ListBoxItem>
            <ListBoxItem>Nimbus</ListBoxItem>
            <ListBoxItem>Paper</ListBoxItem>
            <ListBoxItem>Sims 3</ListBoxItem>
        </ListBox>
    </Grid>
</Window>
