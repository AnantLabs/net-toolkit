<Window x:Class="NET.Tools.WPF.PasswordChangeDialogEx"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:contr="clr-namespace:NET.Tools.WPF;assembly=NET.Tools.WPF.Controls"
    Title="Change password" Height="429" Width="511" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <contr:Header Name="hInfo" Height="50" VerticalAlignment="Top" IconSource="/NET.Tools.WPF.Dialogs;component/Resources/User016.ico" HeaderContent="Change password" DescriptionText="Please enter your old password and enter the new password" />
        <Label Margin="12,81,0,0" Name="label1" Height="28" HorizontalAlignment="Left" VerticalAlignment="Top" Width="119">Old password:</Label>
        <PasswordBox Height="23" Margin="12,115,12,0" Name="txtOldPassword" VerticalAlignment="Top" />
        <Label Height="28" Margin="12,165,0,0" Name="label2" VerticalAlignment="Top" HorizontalAlignment="Left" Width="121">New password:</Label>
        <PasswordBox Height="23" Margin="14,199,12,0" Name="txtNewPassword" VerticalAlignment="Top" />
        <Label Height="28" Margin="14,228,0,0" Name="label3" VerticalAlignment="Top" HorizontalAlignment="Left" Width="141">Confirm password:</Label>
        <PasswordBox Height="23" Margin="14,262,12,0" Name="txtNewPasswordRepeating" VerticalAlignment="Top" />
        <Separator VerticalAlignment="Top" Margin="12,295,8,0"/>
        <Button Height="23" HorizontalAlignment="Right" Margin="0,0,12,12" Name="btnOK" VerticalAlignment="Bottom" Width="75" IsDefault="True" Click="btnOK_Click">OK</Button>
        <Button Height="23" HorizontalAlignment="Left" Margin="14,0,0,12" Name="btnCancel" VerticalAlignment="Bottom" Width="75" IsCancel="True" Click="btnCancel_Click">Cancel</Button>
        <Image Margin="452,295,12,70" Name="imgState" Source="/NET.Tools.WPF.Dialogs;component/Resources/State/User018.png" Stretch="None" StretchDirection="Both" />
    </Grid>
</Window>
