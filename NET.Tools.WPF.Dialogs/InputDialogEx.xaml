<Window x:Class="NET.Tools.WPF.InputDialogEx"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Title" Height="200" Width="514" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" ShowInTaskbar="False">
    <Grid>
        <TextBlock Height="40" Margin="58,12,12,0" Name="lblMessage" VerticalAlignment="Top" Text="Message" />
        <TextBox Margin="12,58,12,0" Name="txtInput" Height="23" VerticalAlignment="Top" />
        <Button Height="23" HorizontalAlignment="Right" Margin="0,0,12,12" Name="btnOK" VerticalAlignment="Bottom" Width="75" IsDefault="True" Click="btnOK_Click">OK</Button>
        <Button Height="23" Margin="12,0,0,12" Name="btnCancel" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="75" IsCancel="True" Click="btnCancel_Click">Cancel</Button>
        <Border Height="40" HorizontalAlignment="Left" Margin="12,12,0,0" Name="border1" VerticalAlignment="Top" Width="40">
            <Image HorizontalAlignment="Center" Name="imgIcon" Stretch="Uniform" StretchDirection="DownOnly" VerticalAlignment="Center" />
        </Border>
        <ComboBox IsTextSearchEnabled="True" Margin="12,58,12,56" Name="cmbInput" Visibility="Hidden" />
    </Grid>
</Window>
